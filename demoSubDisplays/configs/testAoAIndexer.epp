// ------------------------------------------------------------------------------------
// Digital AOA Gauge - f16-like aoa gauge (shows a complex gauge as an abstract object)
// ------------------------------------------------------------------------------------
testAoAIndexer: 
// this is the digital aoa
( TestDigitalGauge
    pagingEvent: {
        n: testlandinggear
        p: testcompass
    }
    components: {
        #include "openeaagles/instruments/gauges/digaoagauge.epp"
        // Label to tell us what test we are running
        ( AsciiText
            position: [ 26 2 ]
            color: white
            text: "testAoAIndexer.epp"
        )
    }
)

