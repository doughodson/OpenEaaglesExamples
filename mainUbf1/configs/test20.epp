#define REF_LATITUDE     30.8
#define REF_LONGITUDE   -86.8
#define OTW_LATITUDE   REF_LATITUDE
#define OTW_LONGITUDE  REF_LONGITUDE

( SimStation

   tcPriority: 1

   components: {

      ubf1: ( SimAgent
         actorPlayerName: p01
         state: ( PlaneState )
         behavior: ( PriorityArbiter
            behaviors: {
               ( PlaneFlyStraight 
                  vote: 10
                  voteOnCriticalAltitude: 100
                  criticalAltitude: ( Meters 3500 ) 
               )
               ( PlaneFire vote: 50 )
               ( PlaneFollowEnemy vote: 50 )
               ( PlaneTurn vote: 15 )
               ( PlaneTrim vote: 100 )
            }
         )
      )
      
      ubf2: ( SimAgent
         actorPlayerName: duck11
