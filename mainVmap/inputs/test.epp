#define WINDOWS

( TestDisplay    
    name: "VMAP Level 0 Test"
    normalFont: default
    fonts: {
        default: 
        ( FTGLPolygonFonts 
            fontPosition: [ -10.5 10.5 ]
            fontWidth: 0.3          // Font width scaling 
            fontHeight: 0.3         // Font height scaling 
            characterSpacing: 1   // This font is 2:1 (height:widht) or (lineSpaceing:charSpacing)
            lineSpacing: 2
            faceSize: 1
            path: FONT_PATH
			file: "arialn.ttf"
        )
    }
    
    left:         -10
    right:         10
    bottom:       -10
    top:           10

    near:        -50.0
    far:          50.0
    
    clearDepth: 1.0
    clearColor: ( rgb 0 0 0 )

    
    vpWidth:    1000
    vpHeight:   1000

    vpfdirectory: 
    ( VMAP0MainDirectory
        // note - in order to make this work you have to download the Vmap level 0 directory!
        // put the directory path in here, for example - 
        // path: "SOMEWHERE/data/v0noa/vmaplv0/"
        path: "Enter a path in file test.epp     "
    )        
    
    page: test
    pages: {
        test: 
        ( MapPage
            refLat: 39.9276
            refLon: -75.2182
            range: 4000
            outerRadius: 20
            components: {
                places:
                ( SymbolLoader 
                    showOnlyInRange: 0
                    templates: {
                        ( Graphic
                            components: {
                                name:
                                ( AsciiText
                                    color: white
                                    text: "XXXXX"
                                )
                            }
                        )
                    }
                )
                points:
                ( SymbolLoader 
                    showOnlyInRange: 1
                    templates: {
                        ( Graphic
                            components: {
                                ( Circle
                                    color: cyan
                                    radius: 0.05
                                    filled: 1
                                    slices: 100
                                )
                            }
                        )
                    }
                )
                // here is a line to show center
                ( Line
                    color: yellow
                    segment: 1
                    vertices: {
                        [ -180 0 ] [ 180 0 ]
                        [ 0 -90 ] [ 0 90 ]
                    }
                )
            }
        )
    }
)
